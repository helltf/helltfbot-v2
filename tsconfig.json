{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node"],
    "lib": ["dom", "ES2022"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@db/entities": ["db/export-entities.ts"],
      "@test-utils*": ["../test/test-utils*"],
      "@modules*": ["modules*"],
      "@api*": ["api*"],
      "@src*": [".*"],
      "@jobs*": ["jobs*"],
      "@service*": ["service*"],
      "@commands*": ["commands*"],
      "@client*": ["client*"],
      "@games*": ["games*"],
      "@utilities*": ["utilities*"]
    },
    "removeComments": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}