{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "lib": ["dom", "ES2022"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}  